<div class="row">
  <div class="col-lg-12">
    <%= ah_ibox do -%>
        <%= ah_ibox_title('Perfect Money Merchant Payments') -%>
        <%= ah_ibox_content do -%>
		    <h2>Statistics</h2>
            <table class="table table-striped">
              <tbody>
              <tr>
                <td>Общая сумма</td>
                <td><%= @payments.inject(0) { |m, e| m += e.payment_amount.to_f } -%></td>
              </tr>
              </tbody>
            </table>
            <hr/>
            <table class="table table-striped">
              <thead>
              <tr>
                <th>#</th>
                <th>ID</th>
                <th>Batch number</th>
                <th>Amount</th>
                <th>Payer</th>
                <th>Payee</th>
              </tr>
              </thead>
              <tbody>
              <%- @payments.each do |_payment| -%>
                  <tr>
                    <td><%= _payment.id -%></td>
                    <td><%= _payment.payment_id -%></td>
                    <td><%= _payment.payment_batch_num -%></td>
                    <td><%= _payment.payment_amount -%></td>
                    <td><%= _payment.payer_account -%></td>
                    <td><%= _payment.payee_account -%></td>
                    </td>
                  </tr>
              <%- end -%>
              </tbody>
            </table>
        <%- end -%>
    <%- end -%>
  </div>
</div>