<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <meta name="viewport" content="width=device-width, maximum-scale=1.0"/>
  <title>The New Friends</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<!--<body class="skin-2 mini-navbar boxed-layout" data-ng-app="tnf-ng-app">-->
<body class="skin-2 mini-navbar" data-ng-app="tnf-ng-app">
<div class="visible-lg corner-ribbon bottom-left sticky red shadow"><%= "v#{@version}" %></div>

<div class="hidden-xs">
  <div id="wrapper">
    <%= render 'layouts/application/sidebar' %>
    <div class="gray-bg" id="page-wrapper">
      <%= render 'layouts/application/navbar' %>
      <div class="wrapper wrapper-content">
        <%- unless @current_user.decorate.profile_fields_filled? -%>
            <%= alert_box context: :danger do %>
                <p>
                  Заполните пожалуйста свой профиль.
                  <%= link_to 'Перейти в профиль.', edit_work_user_profile_url %>
                </p>
            <%- end -%>
        <%- end -%>
        <%- unless flash[:alert].nil? -%>
            <%= alert_box context: :danger do %>
                <p>
                  <%= flash[:alert] %>
                </p>
            <%- end -%>
        <%- end -%>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
<div class="visible-xs">
  <h2 class="text-center m-t-lg">Мобильная версия пока не доступна</h2>
</div>
<%= javascript_include_tag 'application' %>
<%- if Rails.env.production? -%>
    <script>
	    (function (i, s, o, g, r, a, m) {
		    i['GoogleAnalyticsObject'] = r;
		    i[r] = i[r] || function () {
			    (i[r].q = i[r].q || []).push(arguments)
		    }, i[r].l = 1 * new Date();
		    a = s.createElement(o),
				    m = s.getElementsByTagName(o)[0];
		    a.async = 1;
		    a.src = g;
		    m.parentNode.insertBefore(a, m)
	    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

	    ga('create', 'UA-59485838-2', 'auto');
	    ga('send', 'pageview');

    </script>
<%- end -%>
</body>
</html>
