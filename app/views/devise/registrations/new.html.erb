<h2 class="text-center"><%= t('translations.sign_up_noun') -%></h2>
<%- if cookies[:ref] -%>
    <div class="text-muted">
      <%= ah_markdown(t('translations.registration_instructions')) %>
    </div>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.input :email, label: false, autofocus: true, placeholder: 'Email', required: true, class: 'form-control' %>
        <%= f.input :password, label: false, autocomplete: "off", placeholder: t('translations.password'), required: true, class: 'form-control' %>
        <%= f.input :password_confirmation, label: false, autocomplete: "off", placeholder: t('translations.password_confirmation'), required: true, class: 'form-control' %>
        <%= f.input :invite_code, as: :hidden, input_html: { value: cookies[:ref] }, label: false, autocomplete: "off", placeholder: t('translations.invite_code'), required: true, class: 'form-control', hint: ah_markdown(t('translations.invite_email_hint')) %>
        <%= f.button :submit, t('translations.sign_up'), class: 'btn-primary btn-block' %>
    <% end %>
<%- else -%>
	<div class="text-center">
	  <h3>Только по приглашениям</h3>
	  <p>
	    Вы можете найти себе пригласителя на
	    <a href="http://mmgp.ru/showthread.php?t=328246" class="underline">форуме MMGP</a>
	    или у нас в
	    <a href="http://vk.com/thenewfriendsnet" class="underline">группе ВК</a>
	  </p>
	</div>
<% end %>