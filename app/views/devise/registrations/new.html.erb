<h2 class="text-center"><%= t('translations.sign_up_noun') -%></h2>
<div class="text-muted">
  <%= ah_markdown(t('translations.registration_instructions')) %>
</div>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.input :email, label: false, autofocus: true, placeholder: 'Email', required: true, class: 'form-control' %>
    <%= f.input :password, label: false, autocomplete: "off", placeholder: t('translations.password'), required: true, class: 'form-control' %>
    <%= f.input :password_confirmation, label: false, autocomplete: "off", placeholder: t('translations.password_confirmation'), required: true, class: 'form-control' %>
    <%= f.input :invite_code, input_html: { value: cookies[:ref] }, label: false, autocomplete: "off", placeholder: t('translations.invite_code'), required: true, class: 'form-control', hint: ah_markdown(t('translations.invite_email_hint')) %>
    <%= f.button :submit, t('translations.sign_up'), class: 'btn-primary btn-block' %>
<% end %>