<%= ah_markdown('') -%>

<% if notice %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
<% end %>

<% if alert %>
    <div class="alert alert-danger">
      <%= alert %>
    </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: t('translations.password'), required: true, class: 'form-control' %>
    </div>
    <%= f.submit t('translations.sign_in'), class: 'btn btn-primary block full-width m-b' %>
    <%= render "devise/shared/links" %>
<% end %>
